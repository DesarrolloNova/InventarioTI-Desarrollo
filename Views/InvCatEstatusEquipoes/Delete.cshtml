@using InventarioTI.Context
@model InventarioTI.Models.InvCatEstatusEquipo

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
    InventarioContext context = new InventarioContext();
}

<h3>¿Deseas eliminar este registro?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estatus)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        @{
            if (Model.Id != 4 && Model.Id != 2 && Model.Id != 6)
            {
                if (context.InvTabEquipos.Where(e => e.IdEstatus == Model.Id).Select(e => e.Id).ToList().Count > 0)
                {
                    <a>Buen inento...!!! No puedes eliminar este registro</a>
                }
                else
                {
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                }
            }
            else
            { 
                <a>Buen inento...!!! No puedes eliminar este registro</a>
            }
        }
        |
        <a asp-action="Index">Regresar a la lista</a>
    </form>
</div>
