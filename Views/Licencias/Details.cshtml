@using InventarioTI.Context
@model InventarioTI.Models.Licencias

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    InventarioContext context = new InventarioContext();
}

@{
    int idAsignaciones = 0;
    idAsignaciones = context.InvHisAsignacionLicencia.Where(ul => ul.IdLicencia == Model.Id && ul.Activo == true).Select(ul => ul.Id).FirstOrDefault();
    int AsignacionesActivas = 0;
    AsignacionesActivas = context.InvHisAsignacionLicencia.Where(al => al.IdLicencia == Model.Id).ToList().Count();
    if (idAsignaciones != 0)
    {
        if (AsignacionesActivas > 0)
        {
            <div>
                <a class="btn btn-primary" asp-route-id="@idAsignaciones" asp-controller="InvHisAsignacionLicencias" asp-action="Details">Ver Asignación</a> |
                <a asp-controller="InvHisAsignacionLicencias" asp-action="Index" asp-route-idLicencia="@Model.Id">Ver Historial de Asignaciones</a> | 
                <a asp-action="Index">Regresar a las licencias</a>
            </div>
        }
        else
        {
            <div>
                <a class="btn btn-primary" asp-route-id="@idAsignaciones" asp-controller="InvHisAsignacionLicencias" asp-action="Details">Ver Asignación</a> |
                <a asp-action="Index">Regresar a las licencias</a>
            </div>
        }
    }
    else
    {
        if (AsignacionesActivas > 0)
        {
            <div>
                <a class="btn btn-primary" asp-route-idLicencia="@Model.Id" asp-controller="InvHisAsignacionLicencias" asp-action="Create">Asignar</a> |
                <a asp-controller="InvHisAsignacionLicencias" asp-action="Index" asp-route-idLicencia="@Model.Id">Ver Historial de Asignaciones</a> |
                <a asp-action="Index">Regresar a las licencias</a>
            </div>
        }
        else
        {
            <div>
                <a class="btn btn-primary" asp-route-idLicencia="@Model.Id" asp-controller="InvHisAsignacionLicencias" asp-action="Create">Asignar</a> |
                <a asp-action="Index">Regresar a las licencias</a>
            </div>
        }
    }
}
