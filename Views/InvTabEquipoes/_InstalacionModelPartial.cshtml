@model InvHisPlantillaInstalacion

<script>
    $('#paqueteriaField').hide();
    $('#antivirusField').hide();
</script>
<div class="modal fade" id="addInstalacion">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="addMantenimientoLabel">Registra Instalacion</h4>
                <button type="button" class="close" data-dismiss="modal">
                    <span>x</span>

                </button>
            </div>
            <div class="modal-body">
                <form asp-controller="InvTabEquipoes" asp-action="Instalacion">
                    <input hidden asp-for="IdEquipo" value="@Model.IdEquipo" />
                    <b><i class="emphasized">Periodo de Acción</i></b>
                    <br />
                    <label>Fecha de Inicio</label>
                    <input asp-for="initialDate" class="form-control" value="@DateTime.Now" type="date" />
                    <span class="text-danger">Debe ingresar una fecha valida de inicio</span>
                    <hr />
                    <label>Fecha de Fin</label>
                    <input asp-for="finalDate" class="form-control" value="@DateTime.Now" type="date" />
                    <span class="text-danger">Debe ingresar una fecha valida de fin</span>
                    <hr />
                    <b><i class="emphasized">Acciones</i></b>
                    <div class="form-group">
                        <label asp-for="AntivirusInstalado" class="control-label"></label>
                        <input asp-for="AntivirusInstalado" type="checkbox" id="antivirusCheck" onchange="HideAndShow(antivirusCheck,antivirusField)" />
                        <div id="antivirusField">
                            <input asp-for="Antivirus" class="form-control" placeholder="Avast,Avira,Norton,Mcafee..." />
                            <span class="text-danger">Debes ingresar el nombre del antivirus instalado</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="PaqueteriaOfficeInstalado" class="control-label"></label>
                        <input asp-for="PaqueteriaOfficeInstalado" onchange="HideAndShow(paqueteriaCheck,paqueteriaField)" type="checkbox" id="paqueteriaCheck" />
                        <div id="paqueteriaField">
                            <input asp-for="PaqueteriaOffice" class="form-control" placeholder="Versión de Office..." />
                            <span class="text-danger">Debes ingresar la version de la paquetería de office</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="OtrasAplicaciones" class="control-label"></label>
                        <input asp-for="OtrasAplicaciones" />
                        <span asp-validation-for="OtrasAplicaciones" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UsoPortales" class="control-label"></label>
                        <input asp-for="UsoPortales" />
                        <span asp-validation-for="UsoPortales" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SeEliminaronAplicaciones" class="control-label"></label>
                        <input asp-for="SeEliminaronAplicaciones" />
                        <span asp-validation-for="SeEliminaronAplicaciones" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="HddDisponible" class="control-label"></label>
                        <input asp-for="HddDisponible" value="500" min="@Convert.ToInt32("100")" class="form-control" type="number" />
                        <span asp-validation-for="HddDisponible" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Observaciones" class="control-label"></label>
                        <input asp-for="Observaciones" class="form-control" />
                        <span asp-validation-for="Observaciones" class="text-danger"></span>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Guardar</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function HideAndShow(check, field) {
        if ($(check).prop('checked')) {
            $(field).show();
        } else {
            $(field).hide();
        }
    }
</script>