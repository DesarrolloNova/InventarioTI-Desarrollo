@using InventarioTI.Context
@model InventarioTI.Models.InvCatTipoEquipo

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
    InventarioContext context = new InventarioContext();
}

<h3>¿Estás seguro que deseas eliminar este registro?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        @{
            if (context.InvTabEquipos.Where(e => e.IdTipoEquipo == Model.Id).Select(e => e.Id).ToList().Count > 0)
            {
                <a>Buen inento...!!! No puedes eliminar este registro</a>
            }
            else
            {
                <input type="submit" value="Eliminar" class="btn btn-danger" />
            }
        }
        |
        <a asp-action="Index">Regresar a la lista</a>
    </form>
</div>
