@using InventarioTI.Context
@model InventarioTI.Models.InvCatSo

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
    InventarioContext context = new InventarioContext();
}

<h3>¿Deseas eliminar este registro?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SistemaOperativo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SistemaOperativo)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        @{
            if (context.InvTabEquipos.Where(e => e.IdSO == Model.Id).Select(e => e.Id).ToList().Count > 0)
            {
                <input type="submit" value="Eliminar" class="btn btn-danger" disabled/>

            }
            else
            {
                <input type="submit" value="Eliminar" class="btn btn-danger" />
            }
        }
        |
        <a asp-action="Index">Regresar a la lista</a>
    </form>
</div>
